---
layout: layouts/base.njk
title: Contact
---

<section class="page-hero">
  <div class="container">
    <h1>Contact</h1>
    <p class="tagline">Let's make something together.</p>
  </div>
</section>

<section class="section">
  <div class="container">
    <div class="contact-grid">
      <div class="contact-form">
        <form action="#" method="POST">
          <label for="name">Name</label>
          <input type="text" id="name" name="name" required placeholder="Your name">

          <label for="email">Email</label>
          <input type="email" id="email" name="email" required placeholder="your@email.com">

          <label for="service">Service</label>
          <select id="service" name="service">
            <option value="">Select a service...</option>
            <option value="physique">Physique Photography</option>
            <option value="headshots">Headshots</option>
            <option value="portraits">Portraits & Creative</option>
            <option value="film">Film / Video</option>
            <option value="other">Other</option>
          </select>

          <label for="message">Message</label>
          <textarea id="message" name="message" placeholder="Tell me about your project..."></textarea>

          <button type="submit" class="btn btn-fill">Send Message</button>
        </form>
      </div>
      <div class="contact-info">
        <h3>Direct Contact</h3>
        <p><a href="mailto:{{ site.email }}">{{ site.email }}</a></p>

        <h3 style="margin-top: var(--space-md);">Based In</h3>
        <p>Nashville, Tennessee</p>
        <p style="font-size: 0.9rem;">Available for travel worldwide.</p>

        <h3 style="margin-top: var(--space-md);">Follow Along</h3>
        <div class="social-links" style="flex-direction: column;">
          <a href="{{ site.instagram }}" target="_blank" rel="noopener">Instagram</a>
          <a href="{{ site.youtube }}" target="_blank" rel="noopener">YouTube</a>
          <a href="{{ site.imdb }}" target="_blank" rel="noopener">IMDB</a>
        </div>
      </div>
    </div>
  </div>
</section>
