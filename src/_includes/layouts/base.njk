  <title>{{ title }} | {{ site.name }} - {{ site.tagline }}</title>
  <link rel="stylesheet" href="/css/style.css">
</head>
<body>
  <header class="site-header">
    <div class="container">
      <a href="/" class="logo">
        <span class="logo-name">Jonathan Everett</span>
